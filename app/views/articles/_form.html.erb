<%= render "shared/errors" %>

<div class="row justify-content-center">
  <div class="col-10">
    <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-light rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow mb-5 bg-white rounded" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_area :description, rows: 10, class: "form-control shadow mb-5 bg-white rounded" %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <div class="col-2 mt-5">
          <%= f.submit class: "btn btn-outline-dark btn-lg shadow mb-5 bg-white rounded" %>
        </div>
      </div>
    <% end %>
    <div class="container text-center mb-3">
      <%= link_to '[ Cancel and return ro articles listing ]', articles_path, class: "text-info" %>
    </div>
  </div>
</div>